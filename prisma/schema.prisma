// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== ENTIDADES DE PESSOAS =====

model Paciente {
  id      String  @id @default(cuid())
  nome    String
  cpf     String  @unique
  rg      String?
  email   String?
  celular String
  idade   String
  sexo    Sexo

  // Informações médicas
  convenio           Convenios?
  numeroConvenio     String?
  contato_emergencia String?

  // Relacionamentos
  consultas        Consulta[]
  avaliacoes       Avaliacao[]
  planosTratamento PlanoTratamento[]
  prontuarios      Prontuario[]
  pagamentos       Pagamento[]

  // Timestamps
  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt
  ativo        Boolean  @default(true)

  @@map("pacientes")
}

// ===== AGENDAMENTO E CONSULTAS =====

model Consulta {
  id            String         @id @default(cuid())
  data          DateTime
  horaInicio    DateTime
  horaFim       DateTime
  tipo          TipoConsulta
  status        StatusConsulta @default(AGENDADA)
  observacoes   String?
  valorConsulta Decimal        @default(0) @db.Decimal(8, 2) // Adiciona default

  // Relacionamentos
  paciente   Paciente @relation(fields: [pacienteId], references: [id])
  pacienteId String

  // Timestamps
  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt

  @@map("consultas")
}

// ===== AVALIAÇÕES E TRATAMENTOS =====

model Avaliacao {
  id              String   @id @default(cuid())
  data            DateTime @default(now())
  queixaPrincipal String
  historiaDoenca  String?
  exameFisico     String?
  diagnostico     String?
  objetivos       String?

  // Relacionamentos
  paciente        Paciente         @relation(fields: [pacienteId], references: [id])
  pacienteId      String
  planoTratamento PlanoTratamento?

  // Timestamps
  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt

  @@map("avaliacoes")
}

model PlanoTratamento {
  id                String           @id @default(cuid())
  objetivos         String
  numeroSessoes     Int
  frequenciaSemanal Int
  duracaoSessao     Int // em minutos
  descricao         String?
  status            StatusTratamento @default(ATIVO)

  // Relacionamentos
  paciente    Paciente  @relation(fields: [pacienteId], references: [id])
  pacienteId  String
  avaliacao   Avaliacao @relation(fields: [avaliacaoId], references: [id])
  avaliacaoId String    @unique

  // Timestamps
  dataInicio   DateTime  @default(now())
  dataFim      DateTime?
  criadoEm     DateTime  @default(now())
  atualizadoEm DateTime  @updatedAt

  @@map("planos_tratamento")
}

// ===== PRONTUÁRIO =====
model Prontuario {
  id            String   @id @default(cuid())
  data          DateTime @default(now())
  evolucao      String
  procedimentos String?
  observacoes   String?

  // Relacionamentos
  paciente   Paciente @relation(fields: [pacienteId], references: [id])
  pacienteId String

  // Timestamps
  criadoEm DateTime @default(now())

  @@map("prontuarios")
}

// ===== FINANCEIRO =====

model Pagamento {
  id             String          @id @default(cuid())
  valor          Decimal         @db.Decimal(8, 2)
  formaPagamento FormaPagamento
  status         StatusPagamento @default(PENDENTE)
  dataVencimento DateTime
  dataPagamento  DateTime?
  descricao      String?

  // Relacionamentos
  paciente   Paciente @relation(fields: [pacienteId], references: [id])
  pacienteId String

  // Timestamps
  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt

  @@map("pagamentos")
}

// ===== ENUMS =====

enum Sexo {
  MASCULINO
  FEMININO
  OUTRO
}

enum Convenios {
  HAOC
  UNIMED
  SAMARITANO
  BRADESCO
  SULAMERICA
  AMIL
  PORTOSEGURO
  NOTREDAME
}

enum Role {
  ADMIN
  FISIOTERAPEUTA
  RECEPCIONISTA
}

enum TipoConsulta {
  AVALIACAO
  SESSAO
  RETORNO
  REAVALIACAO
}

enum StatusConsulta {
  AGENDADA
  CONFIRMADA
  EM_ANDAMENTO
  FINALIZADA
  CANCELADA
  FALTA
}

enum StatusTratamento {
  ATIVO
  PAUSADO
  FINALIZADO
  CANCELADO
}

enum StatusPagamento {
  PENDENTE
  PAGO
  VENCIDO
  CANCELADO
}

enum FormaPagamento {
  DINHEIRO
  CARTAO_CREDITO
  CARTAO_DEBITO
  PIX
  TRANSFERENCIA
  CONVENIO
}

enum DiaSemana {
  SEGUNDA
  TERCA
  QUARTA
  QUINTA
  SEXTA
  SABADO
  DOMINGO
}
